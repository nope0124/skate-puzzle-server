<p><%= link_to "< 一覧に戻る", stages_path %></p>

<%= form_with model:@stage, local:true do |f| %>
    <div>
        <%= f.label :board %>
        <%= f.text_area :board, class: "form-control", rows: "10" %>
    </div>
    <div>
        <%= f.submit "Create Stage", class: "btn btn-success" %>
    </div>
<% end %>

<br>

<% if @stage.board.present? %>
    <%= display_stage(@stage.board) %>
    <h5><p>最善手: <%= @dist %>手</p></h5>
<% end %>

<%= form_with url:new_stage_path, method: :get do |f| %>
    <div>
        <%= f.hidden_field :gen, :value => true %>
    </div>
    <div>
        <%= f.label :num, "ステージの大きさ" %>
        <%= f.select :num, options_for_select(5..10, @num), class: "form-control" %>
    </div>
    <div>
        <%= f.submit "Auto-Generate Stage", class: "btn btn-primary" %>
    </div>
<% end %>