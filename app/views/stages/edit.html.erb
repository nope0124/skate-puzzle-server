<% if @stage.errors.any? %>
  <div id="error_explanation">
    <h3><%= @stage.errors.count %>件のエラーが発生しました:</h3>

    <ul>
    <% @stage.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@stage, local:true do |f| %>
    <div>
        <%= f.label :board %>
        <%= f.text_area :board, class: "form-control", rows: "10" %>
    </div>
    <div>
        <%= f.submit "Update Stage", class: "btn btn-success" %>
    </div>
<% end %>

